<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top_bar_layout" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:text="@string/txtDemo" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="@string/textTitle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/codeOne"
            style="@style/v_code_edit_text"
            android:background="@drawable/line_shape_bottom_line_ready" />

        <View
            android:layout_width="15dp"
            android:layout_height="1dp" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/codeTwo"
            style="@style/v_code_edit_text"
            android:background="@drawable/line_shape_bottom_line" />

        <View
            android:layout_width="15dp"
            android:layout_height="1dp" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/codeThree"
            style="@style/v_code_edit_text"
            android:background="@drawable/line_shape_bottom_line" />

        <View
            android:layout_width="15dp"
            android:layout_height="1dp" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/codeFour"
            style="@style/v_code_edit_text"
            android:background="@drawable/line_shape_bottom_line" />

    </LinearLayout>

</LinearLayout>